<form method="post" action="{{ path('app_back_casting_delete', {'role': casting.role, 'movie': casting.movie.id, 'person': casting.person.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ casting.role) }}">
    <button class="btn">Delete</button>
</form>
