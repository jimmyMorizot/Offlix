{% extends 'base.html.twig' %}

{% block nav_favorite_list %}active
{% endblock %}

{% block title %}Liste des favoris
{% endblock %}

{% block body %}

	<div class="container-xl bg-light p-5 border-top">

		<div class="row mb-2">

			<h2 class="text-muted fw-bold mb-4">Ma liste</h2>


			{# Ici fragment Ã  inclure #}
			{% include "_flash_message.html.twig" %}

			{% for id,movie in favorites %}

				<div class="col-6">

					<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm bg-white position-relative">
						<div class="col-4 movie__poster" style="background-image: url(https://m.media-amazon.com/images/M/MV5BNThmZGY4NzgtMTM4OC00NzNkLWEwNmEtMjdhMGY5YTc1NDE4XkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_SX300.jpg);">
							<img
							src="{{movie.poster}}" class="img-fluid">
						<!-- img src="https://m.media-amazon.com/images/M/MV5BNThmZGY4NzgtMTM4OC00NzNkLWEwNmEtMjdhMGY5YTc1NDE4XkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_SX300.jpg" class="img-fluid" -->
						</div>
						<div class="col-8 p-4 d-flex flex-column position-static">

							{% include "front/favorite/_toggle_button.html.twig" %}

							<strong class="d-inline-block mb-2 text-primary">{{movie.type}}</strong>
							<h3 class="mb-1">{{movie.title}}</h3>
							<div class="mb-1 text-muted">{{movie.duration}}
								min</div>
							<a href="{{ path( 'movie_show', {id:id} )}}" class="fs-1 mt-3 text-danger align-self-start">
								<i class="bi bi-arrow-right-square"></i>
							</a>
						</div>
					</div>

				</div>
			{% endfor %}

		</div>

		<div class="col">
			<a href="{{ path('favorite_empty')}}" class="btn btn-danger btn-sm" onclick="return confirm('Vider votre liste de favoris ?');">Vider la liste</a>
		</div>

	</div>
{% endblock %}
