{% extends 'back/nav.html.twig' %}

{% block title %} Films et séries {% endblock %}

{% block body %}
	<div class="container pt-5">
		<div class="row mb-2">
			<div class="col">
				<h1>Films et séries</h1>

				<table class="table">
					<tbody>
                        <tr>
							<th>Titre</th>
							<td>{{ movie.title }}</td>
						</tr>
                        <tr>
							<th>Image</th>
							<td><img src="{{movie.poster}}" class="img-fluid"></td></td>
						</tr>
						{# <tr>
							<th>Id</th>
							<td>{{ movie.id }}</td>
						</tr> #}
						<tr>
							<th>Date de réalisation</th>
							<td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>Résumé</th>
							<td>{{ movie.summary }}</td>
						</tr>
						<tr>
							<th>Synopsis</th>
							<td>{{ movie.synopsis }}</td>
						</tr>
						<tr>
							<th>Durée</th>
							<td>{{ movie.duration }} min</td>
						</tr>
						<tr>
							<th>Type</th>
							<td>{{ movie.type }}</td>
						</tr>
						<tr>
							<th>Note</th>
							<td>{{ movie.rating }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('app_back_movie_index') }}" class="btn btn-primary">Retour à la liste</a>

				<a href="{{ path('app_back_movie_edit', {'id': movie.id}) }}" class="btn btn-warning">Modifier</a>

				{{ include('back/movie/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}

